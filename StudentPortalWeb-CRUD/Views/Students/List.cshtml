@{
}

@model List<StudentPortalWeb_CRUD.Models.Entities.Student>

<h1>Students List</h1>

<table class="table">
  <thead>
      <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Email</th>
            <th>Phone</th>
            <th></th>
      </tr>
  </thead>
  <tbody>
      @foreach
      (var students in Model){
      <tr>
                <td>@students.Id</td>
                <td>@students.Name</td>
                <td>@students.Email</td>
                <td>@students.Phone</td>
                <td>
                    <a class="btn btn-primary" asp-controller="Students" asp-action="Edit"  asp-route-id="@students.Id">Edit</a>
                </td>
      </tr>
      }
  </tbody>
</table>
